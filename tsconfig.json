{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2016",
    "lib": ["ES2016", "DOM"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "incremental": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@/Config/*": ["Config/*"],
      "@/Utils/*": ["Utils/*"],
      "@/*": ["*"]
    },
    "outDir": "./dist",

    "forceConsistentCasingInFileNames": true,

    "strict": true,

    "skipLibCheck": true
  },

  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "./dist/**/*"]
}
